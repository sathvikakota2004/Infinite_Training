@model IEnumerable<CC9northwinddbfirst.Models.Customer>
@{
    ViewBag.Title = "Germany Customers";
}

<h2>@ViewBag.Title</h2>

@if (Model == null || !Model.Any())
{
    <div>No customers found in Germany.</div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Company</th>
                <th>Contact</th>
                <th>City</th>
                <th>Phone</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.CompanyName</td>
                    <td>@c.ContactName</td>
                    <td>@c.City</td>
                    <td>@c.Phone</td>
                </tr>
            }
        </tbody>
    </table>
}
