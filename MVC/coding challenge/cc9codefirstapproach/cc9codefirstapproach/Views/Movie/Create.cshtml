@model cc9codefirstapproach.Models.Movie
@{
    ViewBag.Title = "Add Movie";
}

<h2>Add Movie</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.Moviename)
        @Html.TextBoxFor(m => m.Moviename, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DirectorName)
        @Html.TextBoxFor(m => m.DirectorName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DateofRelease)
        @Html.TextBoxFor(m => m.DateofRelease, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
}
