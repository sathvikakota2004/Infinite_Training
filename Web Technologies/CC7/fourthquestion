<!DOCTYPE html>
<html>
<head>
  <title>Hide Odd Rows</title>
</head>
<body>

<table border="1">
  <tr class="oddrow">
    <td>Row 1</td>
  </tr>
  <tr>
    <td>Row 2</td>
  </tr>
  <tr class="oddrow">
    <td>Row 3</td>
  </tr>
  <tr>
    <td>Row 4</td>
  </tr>
  <tr class="oddrow">
    <td>Row 5</td>
  </tr>
</table><br>

<button onclick="hideOddRows()">Hide Odd Rows</button>

<script>
  function hideOddRows() {
    const oddRows = document.getElementsByClassName('oddrow');
    for (let i = 0; i < oddRows.length; i++) {
      oddRows[i].style.display = 'none';
    }
  }
</script>

</body>
</html>
